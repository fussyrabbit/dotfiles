{
  "vim_mode": true,
  "relative_line_numbers": true,
  "cursor_blink": false,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine"
  },
  "format_on_save": "off",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "autosave": "on_window_change",
  "auto_update": false
}
